<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controllers.AddAuthorDialogController" spacing="12" style="-fx-padding: 18;">
    <Label text="Nuovo autore" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <HBox spacing="8">
        <Label text="Nome:"/>
        <TextField fx:id="nameField" promptText="Nome"/>
    </HBox>
    <HBox spacing="8">
        <Label text="Middle name:"/>
        <TextField fx:id="midNameField" promptText="Middle name (opzionale)"/>
    </HBox>
    <HBox spacing="8">
        <Label text="Cognome:"/>
        <TextField fx:id="surnameField" promptText="Cognome"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveAuthorBtn" text="Salva" style="-fx-font-size: 15px;"/>
        <Button fx:id="cancelBtn" text="Annulla"/>
    </HBox>
</VBox>
