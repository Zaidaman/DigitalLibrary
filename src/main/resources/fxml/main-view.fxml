<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.library.controllers.HomeController">

    <!-- Menu Bar in alto -->
    <top>
        <MenuBar>
            <Menu text="Impostazioni">
                <MenuItem fx:id="editUserMenuItem" text="Modifica Dati Utente" />
                <MenuItem fx:id="addAuthorMenuItem" text="Aggiungi Autore" />
                <MenuItem fx:id="addGenreMenuItem" text="Aggiungi Genere" />
                <SeparatorMenuItem fx:id="adminSeparator" visible="false" />
                <MenuItem fx:id="databaseSettingsMenuItem" text="[ADMIN] Configurazione Database" visible="false" />
                <MenuItem fx:id="deleteUserMenuItem" text="[ADMIN] Elimina Utente" visible="false" />
                <MenuItem fx:id="deleteBookFromRepoMenuItem" text="[ADMIN] Elimina Libro da Repository" visible="false" />
                <MenuItem fx:id="logoutMenuItem" text="Logout" />
            </Menu>
            <Menu text="Libreria">
                <MenuItem fx:id="addLibraryMenuItem" text="Aggiungi Libreria" />
                <MenuItem fx:id="shareLibraryMenuItem" text="Condividi Libreria" />
                <MenuItem fx:id="deleteLibraryMenuItem" text="Elimina Libreria" />
            </Menu>
            <Menu text="Libro">
                <MenuItem fx:id="addBookMenuItem" text="Aggiungi Libro" />
                <MenuItem fx:id="addExistingBookMenuItem" text="Aggiungi Libro alla Libreria" />
                <MenuItem fx:id="editBookMenuItem" text="Modifica Libro" />
                <MenuItem fx:id="removeBookFromLibraryMenuItem" text="Rimuovi Libro dalla Libreria" />
            </Menu>
        </MenuBar>
    </top>

    <!-- Sidebar sinistra -->
    <left>
        <VBox spacing="10"
            style="-fx-background-color: #2c3e50; -fx-padding: 10; -fx-pref-width: 220;">
            <Label text="Librerie" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
            <ListView fx:id="libraryList" />
        </VBox>
    </left>

    <!-- Area centrale -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <!-- Barra filtri e ordinamento -->
            <HBox spacing="10" alignment="CENTER_LEFT" fx:id="filterBar" visible="false" managed="false">
                <Label text="Ordina per:" style="-fx-font-size: 14px;"/>
                <ComboBox fx:id="sortCombo" promptText="Ordina"/>
                <Label text="Filtra per tipo:" style="-fx-font-size: 14px; -fx-padding: 0 0 0 20;"/>
                <MenuButton fx:id="filterMenuBtn" text="Filtra">
                    <items>
                        <CheckMenuItem fx:id="pdfFilterItem" text="PDF"/>
                        <CheckMenuItem fx:id="epubFilterItem" text="EPUB"/>
                        <CheckMenuItem fx:id="txtFilterItem" text="TXT"/>
                    </items>
                </MenuButton>
                <Button fx:id="clearFiltersBtn" text="Reset"/>
            </HBox>
            
            <!-- Area contenuto -->
            <StackPane fx:id="contentArea" style="-fx-padding: 10; -fx-background-color: white;" VBox.vgrow="ALWAYS">
                <Label text="Benvenuto nella tua Libreria Digitale!"
                       style="-fx-font-size: 20px;"/>
            </StackPane>
            
            <!-- Pulsanti navigazione -->
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="prevBtn" text="◀ Capitolo precedente" visible="false"/>
                <Button fx:id="nextBtn" text="Capitolo successivo ▶" visible="false"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>